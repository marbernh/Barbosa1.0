<?xml version='1.0' encoding='UTF-8'?>

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <message-bundle>
            <!-- If customizing messages -->
        </message-bundle>
    </application>
    <!-- Main menu on all pages -->
    <navigation-rule>
        <from-view-id>*</from-view-id> 
        <navigation-case>
            <from-outcome>guess</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>/jsf/login/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login2</from-outcome>
            <to-view-id>/content/login.html</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/jsf/about/about.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>gameOver</from-outcome>
            <to-view-id>/jsf/game/gameOver.xhtml</to-view-id>
        </navigation-case>



    </navigation-rule>
    <!-- Product pages -->
    <navigation-rule>
        <from-view-id>/jsf/login/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>loginPass</from-outcome>
            <to-view-id>/jsf/login/loginPass.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>LoginFail</from-outcome>
            <to-view-id>/jsf/login/loginFail.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>edit</from-outcome>
            <to-view-id>/jsf/products/editProduct.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/jsf/products/addProduct.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>PRODUCT_SUCCESS</from-outcome>
            <to-view-id>/jsf/products/products.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/jsf/products/editProduct.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>PRODUCT_SUCCESS</from-outcome>
            <to-view-id>/jsf/products/products.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/jsf/products/deleteProduct.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>PRODUCT_SUCCESS</from-outcome>
            <to-view-id>/jsf/products/products.xhtml</to-view-id>  
        </navigation-case>
    </navigation-rule>

